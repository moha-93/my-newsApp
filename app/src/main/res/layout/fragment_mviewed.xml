<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="4dp"
    android:id="@+id/mv_content"
    tools:context=".MEmailedFragment">

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:id="@+id/mvRecycler_view"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btnDM_mv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/ic_brightness_2"
        app:layout_anchor="@id/mvRecycler_view"
        app:layout_anchorGravity="end|bottom" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btn_mv_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/ic_favorite"
        app:layout_anchor="@id/mvRecycler_view"
        app:layout_anchorGravity="start|bottom" />



</android.support.design.widget.CoordinatorLayout>